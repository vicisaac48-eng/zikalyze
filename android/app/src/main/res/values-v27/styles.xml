<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 
         Android 8.1+ (API 27+) styles with display cutout support
         These styles handle devices with notches and display cutouts
    -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowFullscreen">false</item>
        <!-- Enable edge-to-edge display with display cutout support -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@color/splashBackground</item>
        <!-- Splash screen fills entire display including cutout area -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>
